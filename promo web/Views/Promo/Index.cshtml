@{
    ViewData["Title"] = "Ingresar código";
}

<h2>Promo Ganá!</h2>

<form method="post" action="/Promo/Index" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Ingresá el código de tu voucher</label>
        <!-- ⚠️ nombre DELIBERADAMENTE "codigo" para matchear el [FromForm] string codigo -->
        <input name="codigo" class="form-control" placeholder="Codigo02" />
    </div>

    <div class="text-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>

    <button class="btn btn-primary">Siguiente</button>
</form>
