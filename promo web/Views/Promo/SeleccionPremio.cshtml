@model Promos.Web.Models.Step2Vm
<h2>Elegí tu premio</h2>

<form asp-action="SeleccionPremio" method="post">
    <input type="hidden" asp-for="Codigo" />
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @foreach (var a in Model.Articulos)
        {
            <div class="col">
                <div class="card h-100">
                    <img class="card-img-top" src="@(string.IsNullOrEmpty(a.PrimeraImagenUrl) ? "/img/noimage.png" : a.PrimeraImagenUrl)" alt="@a.Nombre" />
                    <div class="card-body">
                        <h5 class="card-title">@a.Nombre</h5>
                        <p class="card-text">@a.Descripcion</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="SelectedArticuloId" value="@a.Id" />
                            <label class="form-check-label">Elegir este</label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <span asp-validation-for="SelectedArticuloId" class="text-danger"></span>
    <div class="mt-3"><button class="btn btn-primary">Siguiente</button></div>
</form>
